{
    "name": "bringyourownideas/silverstripe-maintenance",
    "description": "Toolset to help with the day by day maintenance work.",
    "type": "silverstripe-module",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/bringyourownideas/silverstripe-maintenance",
    "keywords": [
        "silverstripe",
        "environment",
        "composer",
        "updates",
        "vulnerabilities",
        "security"
    ],
    "authors": [
        {
            "name": "Peter Thaleikis",
            "homepage": "https://thaleikis.de"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "silverstripe/framework": "^3.2",
        "symbiote/silverstripe-gridfieldextensions": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "BringYourOwnIdeas\\Maintenance\\": "src/",
            "BringYourOwnIdeas\\Maintenance\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "suggest": {
        "bringyourownideas/silverstripe-composer-security-checker": "Checks for known security vulnerabilities",
        "bringyourownideas/silverstripe-composer-update-checker": "Checks for available updates of dependencies",
        "bringyourownideas/silverstripe-composer-versions": "Collects information about actually installed dependencies"
    },
    "support": {
        "issues": "https://github.com/bringyourownideas/silverstripe-maintenance/issues"
    },
    "replace": {
        "friendsofsilverstripe/silverstripe-maintenance": "self.version"
    }
}
